                                {{ 'unamur_cobra_config_form_translations_display_mode' | trans({}, 'unamur_cobra') }}
                            </label>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">{{ form_widget(form.translations_display_mode) }}</div>
