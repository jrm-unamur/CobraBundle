                                {{ 'unamur_cobra_config_form_display_inflected_forms' | trans({}, 'unamur_cobra') }}
                            </label>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6"> {{ form_widget(form.display_inflected_forms) }}</div>
                        </div>
                        <div class="form-group row">
